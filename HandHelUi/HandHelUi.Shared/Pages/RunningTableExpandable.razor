@page "/running-table-expandable"

<h2 class="page-title">Expandable Running Tables</h2>

<div class="expandable-table">
    @foreach (var table in Tables)
    {
        <div class="table-row" @onclick="() => ToggleExpand(table)">
            <div><b>Table - @table.TableNo</b></div>
            <div>@table.GuestType | @table.Location</div>
            <div>Cover: @table.Cover | Stw: @table.StewardId</div>
            <div>@(ExpandedTable == table ? "▲" : "▼")</div>
        </div>

        @if (ExpandedTable == table)
        {
            <div class="expanded-content">
                @foreach (var order in table.Orders)
                {
                    <div class="order-block">
                        <div class="order-header">
                            @order.BillNo | @order.DateTime.ToString("dd/MM/yyyy HH:mm")
                        </div>

                        @foreach (var item in order.Items)
                        {
                            <div class="order-item">
                                <span>@item.Name</span>
                                <span>@item.Qty Qty</span>
                                <span>₹ @item.Amount</span>
                            </div>
                        }

                        <div class="summary">
                            <div><b>Sub-Total</b><span>₹ @order.SubTotal</span></div>
                            <div><b>Tax</b><span>₹ @order.Tax</span></div>
                            <div class="grand-total"><b>Grand Total</b><span>₹ @order.GrandTotal</span></div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    private TableModel ExpandedTable;

    void ToggleExpand(TableModel table)
    {
        if (ExpandedTable == table)
            ExpandedTable = null;
        else
            ExpandedTable = table;
    }
}
