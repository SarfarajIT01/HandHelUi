@page "/OrderModify"
@using Microsoft.AspNetCore.Components
@inject IJSRuntime JS

<div class="order-modify-container">
    <!-- Header -->
    <div class="order-header">
        <div class="header-top">
            <h1 class="order-title">Order Modification</h1>
            <button class="close-btn" @onclick="CloseOrder">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="order-info-grid">
            <div class="info-item">
                <span class="info-label">Order No:</span>
                <span class="info-value highlight">RG1162857</span>
            </div>
            <div class="info-item">
                <span class="info-label">Table No:</span>
                <span class="info-value">004</span>
            </div>
            <div class="info-item">
                <span class="info-label">Steward:</span>
                <span class="info-value">-</span>
            </div>
            <div class="info-item">
                <span class="info-label">Cover:</span>
                <span class="info-value">1</span>
            </div>
            <div class="info-item">
                <span class="info-label">Order Type:</span>
                <span class="info-value badge-greet">GREET</span>
            </div>
        </div>
    </div>

    <!-- Order Items Section -->
    <div class="order-items-section">
        <div class="section-header">
            <h3>Order Items</h3>
            <span class="item-count">2 items</span>
        </div>

        <div class="order-items-list">
            <!-- Item 1 -->
            <div class="order-item-card">
                <div class="item-header">
                    <span class="item-name">CHICKEN PARORAS</span>
                    <span class="item-price">₹629.00</span>
                </div>
                <div class="item-details">
                    <span class="item-quantity">Qty: 2</span>
                    <span class="item-modifier">Spice Level: Medium</span>
                </div>
                <div class="item-actions">
                    <button class="btn-modify" @onclick='() => ModifyItem("CHICKEN PARORAS")'>
                        <i class="fas fa-edit"></i> Modify
                    </button>
                    <button class="btn-remove" @onclick='() => RemoveItem("CHICKEN PARORAS")'>
                        <i class="fas fa-trash"></i> Remove
                    </button>
                </div>
            </div>

            <!-- Item 2 -->
            <div class="order-item-card">
                <div class="item-header">
                    <span class="item-name">FRIED FISH</span>
                    <span class="item-price">₹343.00</span>
                </div>
                <div class="item-details">
                    <span class="item-quantity">Qty: 1</span>
                    <span class="item-modifier">Style: Crispy</span>
                </div>
                <div class="item-actions">
                    <button class="btn-modify" @onclick='() => ModifyItem("FRIED FISH")'>
                        <i class="fas fa-edit"></i> Modify
                    </button>
                    <button class="btn-remove" @onclick='() => RemoveItem("FRIED FISH")'>
                        <i class="fas fa-trash"></i> Remove
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Summary -->
    <div class="order-summary-section">
        <div class="summary-card">
            <div class="summary-row">
                <span>Subtotal:</span>
                <span>₹629.00</span>
            </div>
            <div class="summary-row">
                <span>Tax (9.5%):</span>
                <span>₹59.76</span>
            </div>
            <div class="summary-row">
                <span>Discount:</span>
                <span class="discount">-₹0.00</span>
            </div>
            <div class="summary-row total">
                <span>Total Amount:</span>
                <span class="total-amount">₹688.76</span>
            </div>
        </div>
    </div>

    <!-- Remarks Section -->
    <div class="remarks-section">
        <div class="section-header">
            <h3>Remarks</h3>
        </div>
        <div class="remarks-card">
            <p class="remarks-text">Other Remark: Special instructions for preparation</p>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button class="btn-secondary" @onclick="AddNewItem">
            <i class="fas fa-plus"></i> Add New Item
        </button>
        <button class="btn-primary" @onclick="SaveChanges">
            <i class="fas fa-save"></i> Save Changes
        </button>
        <button class="btn-danger" @onclick="CancelOrder">
            <i class="fas fa-times"></i> Cancel Order
        </button>
    </div>
</div>

@code {
    private async Task CloseOrder()
    {
        // Navigate back or close modal
        await JS.InvokeVoidAsync("history.back");
    }

    private void ModifyItem(string itemName)
    {
        // Logic to modify item
        Console.WriteLine($"Modifying item: {itemName}");
    }

    private void RemoveItem(string itemName)
    {
        // Logic to remove item
        Console.WriteLine($"Removing item: {itemName}");
    }

    private void AddNewItem()
    {
        // Logic to add new item
        Console.WriteLine("Adding new item");
    }

    private async Task SaveChanges()
    {
        // Logic to save changes
        await JS.InvokeVoidAsync("alert", "Order changes saved successfully!");
    }

    private async Task CancelOrder()
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to cancel this order?");
        if (confirmed)
        {
            // Logic to cancel order
            await JS.InvokeVoidAsync("alert", "Order cancelled!");
        }
    }
}

