@page "/quickactions"


@if (IsOpen)
{
    <div class="qa-modal-overlay">
        <div class="qa-modal-content" @onclick:stopPropagation>

            <div class="qa-modal-header">
                <h4 class="qa-title-main">Quick Actions</h4>
            </div>

            <div class="qa-grid">
                <div class="qa-card" @onclick='() => OnAction("Order Modify")'>
                    <div class="qa-icon-circle" style="background:#E3F2FD; color:#1565C0">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </div>
                    <div class="qa-title">Order Modify</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Cancel Order")'>
                    <div class="qa-icon-circle" style="background:#FFEBEE; color:#C62828">
                        <i class="fa-solid fa-xmark"></i>
                    </div>
                    <div class="qa-title">Cancel Order</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Order Split")'>
                    <div class="qa-icon-circle" style="background:#FFF3E0; color:#EF6C00">
                        <i class="fa-solid fa-scissors"></i>
                    </div>
                    <div class="qa-title">Order Split</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Bill Generate")'>
                    <div class="qa-icon-circle" style="background:#E8F5E9; color:#2E7D32">
                        <i class="fa-solid fa-file-invoice-dollar"></i>
                    </div>
                    <div class="qa-title">Bill Generate</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Bill Modify")'>
                    <div class="qa-icon-circle" style="background:#E1F5FE; color:#0277BD">
                        <i class="fa-solid fa-file-pen"></i>
                    </div>
                    <div class="qa-title">Bill Modify</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Bill Cancel")'>
                    <div class="qa-icon-circle" style="background:#FFEBEE; color:#B71C1C">
                        <i class="fa-solid fa-ban"></i>
                    </div>
                    <div class="qa-title">Bill Cancel</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Order Reprint")'>
                    <div class="qa-icon-circle" style="background:#F3E5F5; color:#6A1B9A">
                        <i class="fa-solid fa-print"></i>
                    </div>
                    <div class="qa-title">Order Reprint</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Bill Reprint")'>
                    <div class="qa-icon-circle" style="background:#F1F8E9; color:#558B2F">
                        <i class="fa-solid fa-receipt"></i>
                    </div>
                    <div class="qa-title">Bill Reprint</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Table Transfer")'>
                    <div class="qa-icon-circle" style="background:#FFFDE7; color:#F9A825">
                        <i class="fa-solid fa-people-arrows"></i>
                    </div>
                    <div class="qa-title">Table Transfer</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Undo Bill")'>
                    <div class="qa-icon-circle" style="background:#ECEFF1; color:#455A64">
                        <i class="fa-solid fa-rotate-left"></i>
                    </div>
                    <div class="qa-title">Undo Bill</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction("Kitchen Order")'>
                    <div class="qa-icon-circle" style="background:#EDE7F6; color:#4527A0">
                        <i class="fa-solid fa-utensils"></i>
                    </div>
                    <div class="qa-title">Kitchen Order</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction(" Bill Settlement")'>
                    <div class="qa-icon-circle" style="background:#E0F7FA; color:#006064">
                        <i class="fa-solid fa-money-bill-wave"></i>
                    </div>
                    <div class="qa-title">Bill Settlement</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction(" Table Instruction")'>
                    <div class="qa-icon-circle" style="background:#FFFDE7; color:#F9A825">
                        <i class="fa-solid fa-table"></i>
                    </div>
                    <div class="qa-title">Table Instruction</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction(" Bill Split")'>
                    <div class="qa-icon-circle" style="background:#FFF3E0; color:#EF6C00">
                        <i class="fa-solid fa-columns"></i>
                    </div>
                    <div class="qa-title">Bill Split</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction(" Bill Merge")'>
                    <div class="qa-icon-circle" style="background:#E8F5E9; color:#2E7D32">
                        <i class="fa-solid fa-compress"></i>
                    </div>
                    <div class="qa-title">Bill Merge</div>
                </div>

                <div class="qa-card" @onclick='() => OnAction(" Card Options")'>
                    <div class="qa-icon-circle" style="background:#EDE7F6; color:#4527A0">
                        <i class="fa-solid fa-credit-card"></i>
                    </div>
                    <div class="qa-title">Card Options</div>
                </div>
            </div>

            <div class="qa-modal-footer">
                <button class="btn-back" @onclick="ClosePopup">BACK</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    private void ClosePopup()
    {
        IsOpen = false;
        IsOpenChanged.InvokeAsync(IsOpen);
    }

    private void OnAction(string action)
    {
        Console.WriteLine($"Action: {action}");
        ClosePopup();
    }
}


