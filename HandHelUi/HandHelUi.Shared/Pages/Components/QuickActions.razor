    /* Cards */
    .qa-card {
        background: #fff;
        border-radius: 14px;
        padding: 18px 10px;
        text-align: center;
        cursor: pointer;
        transition: all 0.25s ease-in-out;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        overflow: hidden;
        border: 1px ridge;
        /* --bs-card-border-width: var(--bs-border-width); */
    }

        .qa-card:hover {
            transform: translateY(-6px) scale(1.05); /* smooth lift + zoom */
            box-shadow: 0 10px 20px rgba(0,0,0,0.18);
        }

        /* Hover glow border */
        .qa-card::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 14px;
            border: 2px solid transparent;
            transition: all 0.25s ease-in-out;
        }

        .qa-card:hover::after {
            border-color: rgba(255, 75, 43, 0.6); /* theme glow */
            box-shadow: 0 0 12px rgba(255, 75, 43, 0.4);
        }

    /* Icon circle */
