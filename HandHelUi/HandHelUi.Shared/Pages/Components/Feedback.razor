@page "/Feedback"
@inject IJSRuntime JS

@if (ShowFeedbackPopup)
{
    <div class="popup-overlay-guest" @onclick="ClosePopup">
        <div class="popup-card-guest" @onclick:stopPropagation>
            <header class="popup-header">
                <h3>Feedback</h3>
                <button class="btn-close" @onclick="ClosePopup"></button>
            </header>

            <div class="popup-body">

                <div class="input-block">
                    <label>Mobile</label>
                    <input class="input-box" @bind="model.Mobile" placeholder="+91 Mobile" />
                </div>

                <div class="input-block">
                    <label>Guest Name</label>
                    <input class="input-box" @bind="model.GuestName" placeholder="Full Name" />
                </div>

                <div class="input-block">
                    <label>Email</label>
                    <input class="input-box" @bind="model.Email" placeholder="Email" />
                </div>

                <div class="date-row">
                    <div class="date-col">
                        <label>Birthday</label>
                        <InputDate @bind-Value="model.Birthday" class="input-box" />
                    </div>

                    <div class="date-col">
                        <label>Anniversary</label>
                        <InputDate @bind-Value="model.Anniversary" class="input-box" />
                    </div>
                </div>

                <div class="input-block">
                    <label>Gender</label>
                    <div class="radio-row">
                        <label class="radio-pill">
                            <input type="radio" name="gender" @bind="model.Gender" /> Male
                        </label>
                        <label class="radio-pill">
                            <input type="radio" name="gender" @bind="model.Gender"  /> Female
                        </label>
                    </div>
                </div>

                <div class="input-block">
                    <label>Captain/Manager visited?</label>
                    <div class="radio-row">
                        <label class="radio-pill">
                            <input type="radio" name="visit" @bind="model.CaptainVisit" /> Yes
                        </label>
                        <label class="radio-pill">
                            <input type="radio" name="visit" @bind="model.CaptainVisit"  /> No
                        </label>
                    </div>
                </div>

                <div class="input-block">
                    <label>Experience Rating</label>
                    <div class="rating-row">
                        <button class="rating-btn">Bad</button>
                        <button class="rating-btn">Average</button>
                        <button class="rating-btn">Good</button>
                        <button class="rating-btn">Very Good</button>
                    </div>
                </div>

                <div class="input-block">
                    <label>Comments</label>
                    <textarea class="input-box textarea-box"
                              @bind="model.Comments"
                              placeholder="Your valuable feedback..."></textarea>
                </div>

            </div>

            <footer class="popup-footer">
                <button class="submit-btn" @onclick="SubmitFeedback">SUBMIT FEEDBACK</button>
            </footer>

        </div>
    </div>
}

@code {

    private bool ShowFeedbackPopup = true; // Visible

    public class FeedbackModel
    {
        public string Mobile { get; set; }
        public string GuestName { get; set; }
        public string Email { get; set; }
        public DateTime? Birthday { get; set; }
        public DateTime? Anniversary { get; set; }
        public string Gender { get; set; }
        public string CaptainVisit { get; set; }
        public string Comments { get; set; }
    }

    FeedbackModel model = new();

    void ClosePopup() => ShowFeedbackPopup = false;

    async Task SubmitFeedback()
    {
        await JS.InvokeVoidAsync("alert", $"Thanks {model.GuestName}!");
    }
}
