@page "/guest"
<div class="guest-popup">
    <div class="guest-header">
        <h3>Select Guest</h3>
        <input type="text" placeholder="Search Guest" @bind="SearchText" />
    </div>

    <div class="guest-grid">
        <div class="guest-card add-card" @onclick="AddNewGuest">
            <div class="guest-icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="guest-name">Add Guest</div>
        </div>

        @foreach (var guest in FilteredGuests)
        {
            <div class="guest-card" @onclick="@(() => SelectGuest(guest))">
                <div class="guest-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="guest-name">@guest.Name</div>
                <div class="guest-phone">@guest.Mobile</div>
            </div>
        }
    </div>

    <button class="btn-back" @onclick="ClosePopup">Back</button>
</div>

@code {
    private string SearchText { get; set; } = string.Empty;

    private List<Guest> Guests = new()
    {
        new Guest("TANVEER AH", "7889918928"),
        new Guest("SHazia", "6006400260"),
        new Guest("AZIM", "9797100631"),
        new Guest("teja", ""),
        new Guest("umer by", "")
    };

    private IEnumerable<Guest> FilteredGuests =>
        Guests.Where(g => string.IsNullOrWhiteSpace(SearchText)
            || g.Name.Contains(SearchText, StringComparison.OrdinalIgnoreCase)
            || g.Mobile.Contains(SearchText));

    void AddNewGuest() { /* open add guest form */ }
    void SelectGuest(Guest guest) { /* select logic */ }
    void ClosePopup() { /* close popup */ }

    record Guest(string Name, string Mobile);
}

<style>
    .guest-popup {
        background: #fff;
        border-radius: 20px;
        padding: 1.5rem;
        width: 90%;
        max-width: 380px;
        margin: auto;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .guest-header {
        width: 100%;
        text-align: center;
        margin-bottom: 1rem;
    }

        .guest-header h3 {
            font-size: 1.4rem;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .guest-header input {
            width: 100%;
            padding: 0.6rem 1rem;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 0.95rem;
            outline: none;
            transition: 0.2s;
        }

            .guest-header input:focus {
                border-color: #7b4bff;
                box-shadow: 0 0 0 2px rgba(123, 75, 255, 0.2);
            }

    .guest-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 1rem;
        width: 100%;
        justify-items: center;
    }

    .guest-card {
        background: #fafafa;
        border-radius: 15px;
        padding: 1rem 0.5rem;
