        @*  Cart Footer with Expandable Order Details *@
        <div class="cart-footer p-3 border-top">

            <!-- Toggle Button Above HR -->
            <div class="text-center mb-2">
                <button class="btn btn-details-toggle" @onclick="ToggleOrderDetails">
                    @(ShowOrderDetails ? "Hide Other Details ▲" : "Show Other Details ▼")
                </button>
            </div>

            <!-- Collapsible Order Details Section -->
            <div class="order-details-panel @(ShowOrderDetails ? "show" : "")">
                <div class="order-details-inner">

                    <!-- Steward -->
                    <div class="position-relative">
                        <div class="d-flex borderBottom justify-content-between steward-row" @onclick="ToggleStewardPopup">
                            <span>Steward</span>
                            <strong><a>@(SelectedSteward?.EmpName ?? "Select Steward")</a></strong>
                        </div>

                        @if (ShowStewardPopup)
                        {
                            <div class="steward-popup">
                                <div class="steward-popup-header d-flex justify-content-between align-items-center">
                                    <h6 class="fw-bold mb-0">Select Steward</h6>
                                    <button class="btn btn-sm btn-outline-danger rounded-circle" @onclick="ToggleStewardPopup">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                                <hr class="my-2" />
                                <div class="steward-list">
                                    @foreach (var steward in stewards)
                                    {
                                        <div class="steward-item" @onclick="() => SelectSteward(steward)">
                                            @steward.EmpName (@steward.EmpCode)
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Cover -->
                    <div class="d-flex borderBottom justify-content-between" @onclick="() => IsEditingCover = true">
                        <span>Cover</span>

                        @if (IsEditingCover)
                        {
                            <input type="number" class="form-control form-control-sm w-25"
                                   value="@SelectedCovor"
                                   @onchange="OnCoverChanged"
                                   @onblur="() => IsEditingCover = false" />
                        }
                        else
                        {
                            <strong>
                                <a>@SelectedCovor</a>
                            </strong>
                        }
                    </div>

                    <!-- Order Type -->
                    <div class="d-flex borderBottom justify-content-between" @onclick="ToggleOrderType">
                        <span>Order Type</span>
                        <strong><a>@SelectedOrderType</a></strong>
                    </div>

                    @if (ShowOrderTypePopup)
                    {
                        <div class="steward-popup">
                            <div class="steward-popup-header d-flex justify-content-between align-items-center">
                                <h6 class="fw-bold mb-0">Select Order Type</h6>
                                <button class="btn btn-sm btn-outline-danger rounded-circle" @onclick="ToggleOrderType">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>

                            <hr class="my-2" />

                            <div class="steward-list">
                                <div class="steward-item" @onclick='() => SelectOrderType(" GUEST")'>
                                    Guest
                                </div>
                                <div class="steward-item" @onclick='() => SelectOrderType(" COMPLEMENTARY")'>
                                    Complementary
                                </div>
                            </div>
                        </div>
                    }

                 

                    <!-- Guest -->
                    <div class="d-flex borderBottom justify-content-between" @onclick ="HandleGuestPopup">
                        <span>Guest</span> <strong><a>@(SelectedGuest?.GName ?? "No Guest")</a></strong>
                    </div>

                    <!-- Order Remark -->
                    <div class="d-flex borderBottom justify-content-between" @onclick="() => IsEditingRemark = true">
                        <span>Order Remark</span>

                        @if (IsEditingRemark)
                        {
                            <input type="text" class="form-control form-control-sm w-50"
                                   @bind="Remark"
                                   @bind:event="oninput"
                                   @onblur="() => IsEditingRemark = false"
                                   @onkeydown="HandleRemarkKeydown" />

                        }
                        else
                        {
                            <strong><a>@Remark</a></strong>
                        }
                    </div>

                </div>
            </div>

            <!-- Divider -->
            <hr class="my-2" />

            <!-- Item Details -->
            <div class="d-flex justify-content-between">
                <span>Subtotal</span> <strong>₹ 3250</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Tax</span> <strong>₹ 50</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Discount</span> <strong>₹ 50</strong>
            </div>

            <hr class="my-2" />

            <!-- Total -->
            <div class="d-flex justify-content-between">
                <h5 class="fw-bold">Total</h5>
                <h5 class="fw-bold text-success">
                    ₹ @(CartItems.Sum(x => x.Price * x.Qty) + CartItems.SelectMany(x => x.CartSubItem).Sum(x => x.SubItemRates ?? 0))
                </h5>
            </div>

            @if (IsCheckoutDisabled && CartItems.Any())
            {
                <div class="alert alert-danger text-center mb-2 p-1" role="alert"> @GetDisableReason() </div>
            }
            <!-- Checkout Button -->
            <button class="btn btn-modern-gradient w-100 py-2 fs-6" @onclick="CheckoutClicked" disabled="@IsCheckoutDisabled">
                Proceed to Checkout
            </button>
        </div>
    </div>
</div>


@code {
    private bool IsEditingCover = false;
    private bool IsEditingRemark = false;

    private string? Remark { get; set; } = "Add Remark";
    [Parameter] public EventCallback<string> UpdateRemark { get; set; }



    private async Task OnCoverChanged(ChangeEventArgs e)
    {
        if (short.TryParse(e.Value?.ToString(), out var cover))
        {
            // SelectedCovor = cover;
            await SelectCover(cover);
        }
    }

    private async Task SelectCover(short cover)
    {
        await UpdateCover.InvokeAsync(cover);
        IsEditingCover = false;
    }

    private void HandleGuestPopup()
    {
        TableSelectionService.TriggerGuestPopup();
    }

    private async Task HandleRemarkKeydown(KeyboardEventArgs e)
{
    if (e.Key == "Enter")
    {
        await UpdateRemark.InvokeAsync(Remark); 
        IsEditingRemark = false;                     
    }
}
}

@code {
    [Parameter] public bool IsOpen { get; set; }
