                            {
                                <div class="d-flex justify-content-between align-items-center small border-start ps-2 subitem-line">
                                    <div class="d-flex flex-column">
                                        <span>@subItem.SubItemName</span>
                                        <small class="text-muted">₹ @subItem.SubItemRates</small>
                                    </div>
                                    <button class="btn btn-remove-subitem" @onclick="() => RemoveSubItem(item, subItem)" title="Remove">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                </div>
                            }

                        </div>
                    }
                }
            }
            else
            {
                <div class="text-center text-muted mt-5">
                    <i class="bi bi-bag-x fs-1 text-secondary"></i>
                    <p>Your cart is empty</p>
                </div>
            }
